<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/orders.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <title>Orders</title>
    <link rel="shortcut icon" type="x-icon" href="../image/4151901.png">
    <script src="../scripts/adminnav.js"></script>
</head>
<body>

 
  <%- include("./partials/adminheader.ejs") %>
     <main>
        <table>
            <thead>
              <tr class="large-screen">
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Price</th>
                <th>Delivery Status</th>
                <th>action</th>
              </tr>
              <tr class="small-screen">
                <th><h3>List of Orders</h3></th>
              </tr>
            </thead>
            <tbody>
              <% Order.forEach((order, index) => { %>
                <tr>
                  <td><%=customer[index].fullname %></td>
                  <td><%=product[index].title %></td>
                  <td><%=order._id %></td>
                  <td><%=order.dateOrdered %></td>
                  <td><%=order.totalPrice %></td>
                  <td>
                   
                    <%if(order.status==='Pending'){%>
                     <span class="status-pending"></span>
                    <%=order.status %>
                      </td>
                    <%}else if(order.status==='paused'){%>
                      <span class="status-not"></span>
                     <%=order.status %>
                       </td>
                     <%}else if(order.status==='confirmed'){%>
                      <span class="status-done"></span>
                     <%=order.status %>
                       </td>
                     <%}%>
                  <td>
                    <%if(order.status!=='confirmed'){%>
                    <a href="/ordes/<%=order.id%>"><button>confirm</button></a>
                    <%}%>
                    <% if(order.status!=='paused'||order.status==='Pending'){%>
                    <a href="/ordes/paused/<%=order.id%>"><button>pause</button></a>
                    <% }%>
                    <a href="/ordes/delete/<%=order.id%>"><button>cancel</button></a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
     </main>
 
</body>
</html>