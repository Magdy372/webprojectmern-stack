<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">+
    <link rel="shortcut icon" type="x-icon" href="../images/4151901.png">
        <!-- <link rel="stylesheet" href="../css/homepage.css"> -->
        <link rel="stylesheet" href="/css/checkout.css">
        <link rel="stylesheet" href="https://kit.fontawesome.com/e390cab89c.css">
        <script src="https://kit.fontawesome.com/e390cab89c.js" crossorigin="anonymous"></script>
        <title>payment</title>
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <%- include("./partials/chat.ejs") %>
  <main>
    <h2>Payment Details</h2>
    <div class="form-container">
        <form >
            <div class="input-container">
                <div class="input-line">
                    <label for="Fname">First name</label>
                    <input type="text" name="Fname" id="Fname" placeholder="first name" >
                    <span class="error"></span>
                    <div class="erro"></div>
                </div>
                <div class="input-line">
                    <label for="Lname">Last name</label>
                    <input type="text" name="Lname" id="Lname" placeholder="last name" >
                    <span class="error"></span>
                    <div class="erro"></div>
                </div>
            </div> 
            <div class="input-line">
                <label for="phone">Phone number</label>
                <input type="text" name="phone" id="phone" placeholder="enter your number" >
                <span class="error"></span>
                <div class="erro"></div>
            </div>
            <div class="input-line">
                <label for="loc">Address</label>
                <input type="text" name="address" id="address" placeholder="enter your address" >
                <span class="error"></span>
                <div class="erro"></div>
            </div>
           
            <div class="input-line">
                <label for="cardName">Name on card</label>
                <input type="text" name="c" id="cardN" placeholder="enter your card name" >
                <span class="error"></span>
                <div class="erro"></div>
            </div>
            <div class="input-line">
                <label for="card">Card number</label>
                <input type="text" name="card" id="card" placeholder="1111-2222-3333-4444" >
                <span class="error"></span>
                <div class="erro"></div>
            </div>
            <div class="input-container">
                <div class="input-line">
                    <label for="date">Expiring date</label>
                    <input type="text" name="date" id="date" placeholder="09-21" >
                    <span class="error"></span>
                    <div class="erro"></div>
                </div>
                <div class="input-line">
                    <label for="cvc">CVC</label>
                    <input type="text" name="cvc" id="cvc" placeholder="***" >
                    <span class="error"></span>
                    <div class="erro"></div>
                </div>
              
            </div>
        
    </div>
    <button class="button">Complete purchase</button>
</form>
</main>
</body>
</html>