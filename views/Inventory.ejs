<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/Inventory.css">
    <!-- <link rel="stylesheet" href="../css/homepage.css"> -->
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="https://kit.fontawesome.com/e390cab89c.css">
    <script src="https://kit.fontawesome.com/e390cab89c.js" crossorigin="anonymous"></script>
    <title>Inventory</title>
    <link rel="shortcut icon" type="x-icon" href="../image/4151901.png">
    <script src="../scripts/adminnav.js"></script>
</head>
<body>
    <%- include("./partials/adminheader.ejs") %>
     <main>


   

    <a href="/ADMIN-ADD" class="additem"><button>ADD ITEM<span class="las la-arrow-right"></span></button> </a>
     <br>
    <h2 class="current-items" style="color: var(--main-color); left: 0%;">Current Items</h2>
    <br><br>

   <div id="mySidenav" class="sidenav">
    <h1 id="carth">Cart</h1>
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>

    <section  id="productcart" >
        <div class="pro-container">
            
            <div class="pro">
                <img src="../images/dell g15/Annotation 2023-03-11 144934.png" alt=" photo">
                <div class="des">
                        <span>Dell</span>
                        <h5>Dell g15</h5>
                        <div class="star">
                        
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        
                        </div>
                        <h5>$2100</h5>
                </div>
                
        </div>
        </div>

        <button class="checkout-button">Checkout</button>
        
        </section>

    
  </div>


    
<section  id="product1" class="section-p1">
    <h2>Smartphones</h2>
    <div class="pro-container">

    
    
    <% product1.forEach(element => { %>

    <div class="pro">
            <img src="../images/<%=element.image%>" alt=" photo">
    <div class="des">
        <span><%=element.category%></span>
        <h5> <%=element.title%></h5>
    <div class="star">
    
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
        <i class="fas fa-star"></i>
    
    </div>
    <h5> $<%=element.Price%></h5>
        </div>
        <a href="/edititem/<%=element.id%>" id="edit"><i class="fa-regular fa-pen-to-square"></i></a>
        <a href="/Inventory/<%=element.id%>" id="trash"><i class="fa-solid fa-trash"></i></a>
    </div>
    
        
    <%});%>
        
        
        
</div>

<hr><br><hr>

<section  id="product1" class="section-p1">
<h2>Laptops</h2>
<div class="pro-container">

    <% product.forEach(element => { %>

        <div class="pro">
                <img src="../images/<%=element.image%>" alt=" photo">
        <div class="des">
        <span><%=element.category%></span>
        <h5> <%=element.title%></h5>
        <div class="star">
        
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
        
        </div>
        <h5> $<%=element.Price%></h5>
            </div> 
            <a href="" id="edit"><i class="fa-regular fa-pen-to-square"></i></a>
            <a href="" id="trash"><i class="fa-solid fa-trash"></i></a>
        </div>
        
            
        <%});%>
    
</div>
                
</section>

   


     </main>
</body>
</html>