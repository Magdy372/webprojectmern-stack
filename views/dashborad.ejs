<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1,maxium-scale=1">
    <title>DashBoard</title>
    <link rel="stylesheet" href="../css/dashstyle.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="shortcut icon" type="x-icon" href="../image/4151901.png">
    <script src="../scripts/adminnav.js"></script>
</head>
<body>
    <%- include("./partials/adminheader.ejs") %>
    <%- include("./partials/tran.ejs") %>
    

    <main>

        <div class="cards">
            <div class="card-single">
                <div>
                    <h1><%=user1.length%></h1>
                    <span>Customers</span>
                </div>
                <div>
                    <span class="las la-users"></span>
                </div>
            </div>

            <div class="card-single">
                <div>
                    <h1><%=product.length%></h1>
                    <span>products</span>
                </div>
                <div>
                    <span class="las la-clipboard"></span>
                </div>
            </div>

            <div class="card-single">
                <div>
                    <h1><%=order.length%></h1>
                    <span>Orders</span>
                </div>
                <div>
                    <span class="las la-shopping-bag"></span>
                </div>
            </div>

            <div class="card-single">
                <div>
                    <%let sum=0; %>
                    <%order.forEach(order=>{%>
                       <%sum=sum+order.totalPrice;%>
                   <% })%>

                    <h1>$<%=sum%></h1>
                    <span>Income</span>
                </div>
                <div>
                    <span class="lab la-google-wallet"></span>
                </div>
            </div>
        </div>

        <div class="recent-grid">
            <div class="Delivery">
                <div class="card">
                    <div class="card-header">
                        <h3>Recent orders</h3>

                        <a href="/ordes"><button>See all <span class="las la-arrow-right"></span>
                        </button></a>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive"> 
                        <table width="100%">
                           <thead>
                             <tr>
                                <td>Order ID</td>
                                <td>totalPrice</td>
                                <td>Status</td>
                             </tr>
                           </thead>
                           <tbody>
                            <%order.forEach(element=>{%>
                              <tr>
                                <td><%=element._id%></td>
                                <td><%=element.totalPrice%></td>
                                <td>
                                    <span class="status-done"></span>
                                    <%=element.status%>
                                </td>
                              </tr>
                            <%})%>
                           </tbody>
                        </table>
                      </div> 
                    </div>
                </div>
            </div>

            <div class="Delivery">
                <div class="card">
                    <div class="card-header">
                        <h3>Top Customers</h3>

                      <a href="/customers" > <button>See all  <span class="las la-arrow-right"></span></button></a>
                        </button>
                    </div>
                    
                    <% user1.slice(0, 5).forEach(element => { %>

                    <div class="card-body">
                        <div class="customer">
                            <div class="info">
                                <!-- <img src="wallpaper/wallpaperflare.com_wallpaper (3).jpg" width="40px" height="40px" alt=""> -->
                                <div>
                                    <% if(element.type!=='admin'){%>
                                    <h4><%=element.mail%></h4>
                                    <small><%=element.Type%></small>
                                    <%}%>
                                </div>
                            </div>
                            <div class="contact">
                                 <span  class="las la-user-circle"></span>
                                 <span class="las la-phone"></span>
                            </div>
                        </div>
                        
                     </div>
                     <%});%>
                </div>
            </div>

        </div>
       
    </main>
   </div>
  
</body>
</html>