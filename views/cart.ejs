<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/cart.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <title>cart</title>
    <link rel="shortcut icon" type="x-icon" href="../image/4151901.png">
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <%- include("./partials/chat.ejs") %>

<main>

    <div class="container">

        <h1>Shopping Cart</h1>
    
        <div class="cart">

            <div class="products">

                <% product.forEach(product=> { %>

                    <div class="product">
                        <a href="/item/<%=product.id%>" class="product-link">
                          <img src="../images/<%=product.image%>" alt="Product Image" class="product-image">
                          <div class="product-info">
                            <h3 class="product-name"><%=product.title%></h3>
                            <p class="product-price">$<%=product.Price%></p>
                            <p class="product-offer"><%=product.category%></p>
                            <button class="product-remove">Remove</button>
                          </div>
                        </a>
                      </div>

                      <%})%>
    
            </div>
    
            <div class="cart-total">
    
                <p>
    
                    <span>Total Price</span>
    
                    <span>3,000$</span>
    
                </p>
    
                <p>
    
                    <span>Number of Items</span>
    
                    <span>2</span>
    
                </p>
    
                <p>
    
                    <span>You Save</span>
    
                    <span>1,000$</span>
    
                </p>
    
                <a href="#">Proceed to Checkout</a>
    
            </div>
    
        </div>
    
    </div>
    <%- include("./partials/footer.ejs") %>
</main>
 </body>

  
</html>